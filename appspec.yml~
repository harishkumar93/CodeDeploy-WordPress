version: 0.0
os: linux
files:
  - source: /
    destination: /var/www/html/WordPress
hooks:
  BeforeInstall:
    - location: /tmp/wordPress/scripts/install_dependencies.sh
      timeout: 300
      runas: root
  AfterInstall:
    - location: /tmp/wordPress/scripts/change_permissions.sh
      timeout: 300
      runas: root
  ApplicationStart:
    - location: /tmp/wordPress/scripts/start_server.sh
      timeout: 300
      runas: root
  ApplicationStop:
    - location: /tmp/wordPress/scripts/stop_server.sh
      timeout: 300
      runas: root
